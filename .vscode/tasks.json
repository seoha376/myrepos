{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build C Program",
            "type": "shell",
            "command": "gcc",
            "args": [
                "-Wno-implicit-int",
                "-Wno-implicit-function-declaration",
                "-Wno-builtin-declaration-mismatch",
                "-Wno-return-type",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}.exe"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"],
            "detail": "Custom build task for C program"
        }
    ]
}
